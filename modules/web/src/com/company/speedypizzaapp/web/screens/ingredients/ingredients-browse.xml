<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="ingredientsesTable"
        messagesPack="com.company.speedypizzaapp.web.screens.ingredients">
    <data readOnly="true">
        <collection id="ingredientsesDc"
                    class="com.company.speedypizzaapp.entity.Ingredients"
                    view="_local">
            <loader id="ingredientsesDl">
                <query>
                    <![CDATA[select e from speedypizzaapp_Ingredients e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="ingredientsesTable"
            spacing="true">
        <filter id="filter"
                applyTo="ingredientsesTable"
                dataLoader="ingredientsesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="ingredientsesTable"
                    width="100%"
                    dataContainer="ingredientsesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="ingredientsesTable.create"/>
                <button id="editBtn" action="ingredientsesTable.edit"/>
                <button id="removeBtn" action="ingredientsesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
